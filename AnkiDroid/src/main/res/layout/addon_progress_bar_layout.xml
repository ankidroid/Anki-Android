<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/addon_progress_bar_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/progress_bar_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"
        android:textColor="?android:textColorPrimary"
        android:textSize="20sp"
        tools:text="Progress Indicator Title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/progress_bar_layout_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:paddingTop="2dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            tools:text="Progress Indicator Message" />

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/progress_bar_value_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            tools:text="0/3" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:max="3"
            android:padding="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/cancel_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:text="@string/dialog_cancel"
        android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>