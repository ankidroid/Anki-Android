<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- TODO JS make this file more fully themable -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="11.3333dip"
            android:layout_marginRight="43.3333dip"
            android:layout_marginTop="30dip"
            android:background="?attr/backgroundElevatedColor" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="?attr/backgroundElevatedColor"
                android:clickable="false"
                android:focusable="false" />

            <FrameLayout
                android:id="@+id/widget_big_cardbackgroundstar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/widget_big_star"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/widget_big_cardcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="5dip"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/widget_big_deckfield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dip"
                android:background="@drawable/widget_big_deckfield"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/widget_big_totalcongrats"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/widget_big_tomorrow_due"
                    android:textColor="@color/widget_big_font_color"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/widget_big_decknames"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/widget_big_deckdues"
                        android:gravity="left"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/widget_big_font_color" />

                    <TextView
                        android:id="@+id/widget_big_deckdues"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:lineSpacingMultiplier="1.2" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/widget_big_decketa"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/widget_big_font_color"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_big_card_areas"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/widget_big_topleft"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dip"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/widget_big_topright"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dip"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/widget_big_middleleft"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dip"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/widget_big_middleright"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dip"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/widget_big_bottomleft"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dip"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/widget_big_bottomright"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dip"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/widget_big_nothing_due"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="15dip"
                android:clickable="false"
                android:orientation="vertical"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/widget_big_congrats"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@+id/widget_big_congrats_buttons"
                    android:layout_marginBottom="5dip"
                    android:clickable="false"
                    android:gravity="center"
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/widget_big_congrats_buttons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/widget_big_review_early"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/white_btn_default"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="@color/widget_big_font_color" />

                    <TextView
                        android:id="@+id/widget_big_learn_more"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/white_btn_default"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="@color/widget_big_font_color" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/widget_big_progressbar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:visibility="invisible" >

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dip"
                    android:clickable="false"
                    android:focusable="false"
                    android:indeterminate="true" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ankidroid_widget_big_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/widget_big_bg"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/widget_big_progress_frame_deck"
            android:layout_width="29.3333dip"
            android:layout_height="4.6667dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/widget_big_top"
            android:layout_marginRight="10.6667dip"
            android:background="@drawable/widget_big_progress_bg"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/widget_big_progress_deck"
                style="@style/Widget.ProgressBar.BigWidget.Horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_big_progress_frame_total"
            android:layout_width="29.3333dip"
            android:layout_height="4.6667dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/widget_big_progress_frame_deck"
            android:layout_marginRight="10.6667dip"
            android:layout_marginTop="2dip"
            android:background="@drawable/widget_big_progress_bg" >

            <ProgressBar
                android:id="@+id/widget_big_progress_total"
                style="@style/Widget.ProgressBar.BigWidget.Horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/widget_big_side"
            android:layout_width="35.3333dip"
            android:layout_height="fill_parent"
            android:layout_above="@+id/widget_big_bottom_right"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/widget_big_progress_frame_total"
            android:layout_marginBottom="0.6667dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="2.6667dip"
            android:clickable="false"
            android:focusable="false"
            android:orientation="vertical"
            android:padding="0dip" >

            <FrameLayout
                android:id="@+id/widget_big_openclose"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@drawable/widget_big_button"
                android:clickable="true" >

                <TextView
                    android:id="@+id/widget_big_open"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/widget_big_opendeck"
                    android:clickable="false"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/widget_big_close"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/widget_big_closedeck"
                    android:clickable="false"
                    android:visibility="invisible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:focusable="false"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:id="@+id/widget_big_ease4"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:background="@drawable/widget_big_button"
                        android:clickable="true" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/widget_big_ease4"
                            android:clickable="false"
                            android:visibility="visible" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/widget_big_ease3"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:background="@drawable/widget_big_button"
                        android:clickable="true" >

                        <TextView
                            android:id="@+id/widget_big_ease3_normal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/widget_big_ease3"
                            android:clickable="false"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/widget_big_ease3_rec"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/widget_big_ease3_rec"
                            android:clickable="false"
                            android:visibility="visible" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/widget_big_ease2"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:background="@drawable/widget_big_button"
                        android:clickable="true" >

                        <TextView
                            android:id="@+id/widget_big_ease2_rec"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/widget_big_ease2"
                            android:clickable="false"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/widget_big_ease2_normal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/widget_big_ease2_rec"
                            android:clickable="false"
                            android:visibility="invisible" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/widget_big_ease1"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:background="@drawable/widget_big_button"
                        android:clickable="true" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/widget_big_ease1"
                            android:clickable="false"
                            android:visibility="visible" />
                    </FrameLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/widget_big_empty"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/widget_big_button"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/widget_big_flipcard"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/widget_big_flipcard"
                        android:clickable="false"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/widget_big_help"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/widget_big_help"
                        android:clickable="false"
                        android:visibility="visible" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/widget_big_top"
            android:layout_width="fill_parent"
            android:layout_height="22dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="9.3333dip"
            android:layout_marginTop="8dip"
            android:clickable="false"
            android:focusable="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/widget_big_deckname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/widget_big_counts"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/widget_big_font_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_big_counts"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8sp"
                android:layout_toLeftOf="@+id/widget_big_eta_layout"
                android:gravity="center"
                android:singleLine="true" />

            <LinearLayout
                android:id="@+id/widget_big_eta_layout"
                android:layout_width="32dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center" >

                <TextView
                    android:id="@+id/widget_big_eta"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/widget_big_eta"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/widget_big_font_color" />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/widget_big_bottom_right"
            android:layout_width="38.6667dip"
            android:layout_height="27.3333dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:background="@drawable/widget_big_button_bottom_right"
            android:clickable="true" >

            <TextView
                android:id="@+id/widget_big_add"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/widget_big_add"
                android:clickable="false"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/widget_big_star"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/widget_big_button_star"
                android:clickable="false"
                android:visibility="visible" />
        </FrameLayout>

        <TextView
            android:id="@+id/widget_big_message"
            android:layout_width="fill_parent"
            android:layout_height="22dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8.6667dip"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="4.6667dip"
            android:layout_toLeftOf="@+id/widget_big_bottom_right"
            android:clickable="false"
            android:ellipsize="start"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:singleLine="true"
            android:textColor="@color/widget_big_font_color"
            android:textSize="13sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/widget_big_noclicks"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:visibility="invisible" />

</FrameLayout>