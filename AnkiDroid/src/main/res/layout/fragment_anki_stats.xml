<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".AnkiStatsActivity$ChartFragment">

    <com.ichi2.anki.stats.ChartView
        android:layout_width="fill_parent"
        android:id="@+id/image_view_chart"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:textColor="#FFFFFF"
        android:layout_margin="0dp"
        android:visibility="visible"/>
    <!-- Carefully consider whether and how to improve on the use of default colors in the text and background colors. -->

    <ProgressBar
        android:id="@+id/progress_bar_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true"/>


</RelativeLayout>
