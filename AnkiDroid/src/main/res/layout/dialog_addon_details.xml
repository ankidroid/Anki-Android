<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/addon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Test addon"
                android:textAppearance="?textAppearanceHeadline6"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addon_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:textAppearance="?textAppearanceBodySmall"
                android:layout_marginTop="16dp"
                tools:text="This is the description of the addon which mentions what the addon actually does"
                app:layout_constraintTop_toBottomOf="@+id/addon_name"/>

            <View
                android:id="@+id/divider_description"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/addon_description"
                android:background="@color/material_blue_grey_100" />

            <TextView
                android:id="@+id/addon_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBodyMedium"
                android:text="Type"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_description"
                app:layout_constraintEnd_toStartOf="@id/addon_type"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/addon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/addon_type_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="?textAppearanceBodyMedium"
                android:layout_marginTop="8dp"
                tools:text="Reviewer"
                app:layout_constraintTop_toBottomOf="@id/divider_description"
                app:layout_constraintBaseline_toBaselineOf="@id/addon_type_label"/>

            <View
                android:id="@+id/divider_type"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/addon_type"
                android:background="@color/material_blue_grey_100" />

            <TextView
                android:id="@+id/addon_author_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBodyMedium"
                android:text="Author"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_type"
                app:layout_constraintEnd_toStartOf="@id/addon_author"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/addon_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBodyMedium"
                app:layout_constraintStart_toEndOf="@id/addon_author_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                tools:text="AnkiDroid"
                app:layout_constraintTop_toBottomOf="@id/divider_type"
                app:layout_constraintBaseline_toBaselineOf="@id/addon_author_label" />

            <View
                android:id="@+id/divider_author"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/addon_author_label"
                android:background="@color/material_blue_grey_100" />

            <TextView
                android:id="@+id/addon_version_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBodyMedium"
                android:text="Version"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_author"
                app:layout_constraintEnd_toStartOf="@id/addon_version"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/addon_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBodyMedium"
                app:layout_constraintStart_toEndOf="@id/addon_version_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                tools:text="1.0.0"
                app:layout_constraintTop_toBottomOf="@id/divider_author"
                app:layout_constraintBaseline_toBaselineOf="@id/addon_version_label"/>

            <View
                android:id="@+id/divider_version"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/addon_version_label"
                android:background="@color/material_blue_grey_100" />

            <TextView
                android:id="@+id/addon_js_api_version_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBodyMedium"
                android:text="AnkiDroid JS API Version"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_version"
                app:layout_constraintEnd_toStartOf="@id/addon_js_api_version"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/addon_js_api_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/addon_js_api_version_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                tools:text="1.0.0"
                android:textAppearance="?textAppearanceBodyMedium"
                app:layout_constraintTop_toBottomOf="@id/divider_author"
                app:layout_constraintBaseline_toBaselineOf="@id/addon_js_api_version_label"/>

            <View
                android:id="@+id/divider_js_api_version"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/addon_js_api_version"
                android:background="@color/material_blue_grey_100" />

            <TextView
                android:id="@+id/addon_license_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="License"
                android:textAppearance="?textAppearanceBodyMedium"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_js_api_version"
                app:layout_constraintEnd_toStartOf="@id/addon_license"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/addon_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/addon_license_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="?textAppearanceBodyMedium"
                android:layout_marginTop="8dp"
                tools:text="MIT"
                app:layout_constraintTop_toBottomOf="@id/divider_js_api_version"
                app:layout_constraintBaseline_toBaselineOf="@id/addon_license_label"/>

            <View
                android:id="@+id/divider_license"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/addon_license_label"
                android:background="@color/material_blue_grey_100" />

            <TextView
                android:id="@+id/addon_homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:layout_marginTop="8dp"
                android:textAppearance="?textAppearanceBodyMedium"
                tools:text="https://ankiweb.net"
                app:layout_constraintTop_toBottomOf="@id/divider_license"
                android:linksClickable="true"
                android:textColor="@color/material_blue_500"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>