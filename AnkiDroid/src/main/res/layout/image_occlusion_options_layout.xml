<LinearLayout style="@style/Animation.Design.BottomSheetDialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/occlusion_action_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multimedia_editor_image_field_editing_photo"
        app:icon="@drawable/ic_camera" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/occlusion_action_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_image_gallery"
        app:icon="@drawable/ic_gallery" />

</LinearLayout>