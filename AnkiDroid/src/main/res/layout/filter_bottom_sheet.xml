<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cancel_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_cancel"
            android:textColor="?attr/filterItemTextColor"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <Button
            android:id="@+id/apply_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_filter"
            android:textColor="?attr/filterItemTextColor"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </LinearLayout>
Â®
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/filterHeaderDivider" />


    <androidx.core.widget.NestedScrollView

        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


<!--            decks-->
            <LinearLayout
                android:id="@+id/decks_filter_sheet_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/filterByDecksText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/filter_deckListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_opened_list_icon"/>

                    <ImageView
                        android:id="@+id/filter_deckListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_label_icon_decks"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_by_decks"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginVertical="10dp" />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/decksRecyclerViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/filter_bottom_deck_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

<!--            tags-->
            <LinearLayout
                android:id="@+id/tags_filter_sheet_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/filterByTagsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/filter_tagListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_opened_list_icon"/>

                    <ImageView
                        android:id="@+id/filter_deckListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_label_icon_tags"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_by_tags"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginVertical="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tagsRecyclerViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/filter_bottom_tag_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

<!--            flags-->
            <LinearLayout
                android:id="@+id/flags_filter_sheet_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/filterByFlagsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/filter_flagListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_opened_list_icon"/>

                    <ImageView
                        android:id="@+id/filter_deckListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_label_icon_flags"/>

                    <TextView
                        android:id="@+id/filterByFlagsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_by_flags"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginVertical="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/flagsRecyclerViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/filter_bottom_flag_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

<!--            note types-->
            <LinearLayout
                android:id="@+id/noteTypes_filter_sheet_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/filterByNoteTypesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/filter_noteTypesListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_opened_list_icon"/>

                    <ImageView
                        android:id="@+id/filter_deckListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_label_icon_note_types"/>

                    <TextView
                        android:id="@+id/filterByNoteTypesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_by_note_types"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginVertical="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noteTypesRecyclerViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/filter_bottom_noteType_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

<!--            card state-->
            <LinearLayout
                android:id="@+id/cardStates_filter_sheet_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/filterByCardStatesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/filter_cardStateListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_opened_list_icon"/>

                    <ImageView
                        android:id="@+id/filter_deckListToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/filter_sheet_label_icon_card_states"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_by_card_state"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginVertical="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardStatesRecyclerViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/filter_bottom_cardState_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
