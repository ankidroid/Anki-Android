<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="?attr/buttonRippleColor">
    <item>
        <layer-list>
            <!-- Gray shadow of button. -->
                <shape android:shape="rectangle" >
                    <solid android:color="?attr/wideButtonBackgroundColor" />
                    <stroke android:width="1dip" android:color="?attr/largeButtonBorderColor"  />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
                    <corners
                        android:topLeftRadius="5dp"
                        android:topRightRadius="5dp"
                        android:bottomLeftRadius="5dp"
                        android:bottomRightRadius="5dp"/>
                </shape>
            <!-- White foreground of button. -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle" >
                    <solid android:color="?attr/wideButtonBackgroundColor" />
                    <stroke android:width="1dip" android:color="?attr/largeButtonBorderColor"  />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
                    <corners
                        android:topLeftRadius="5dp"
                        android:topRightRadius="5dp"
                        android:bottomLeftRadius="5dp"
                        android:bottomRightRadius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>