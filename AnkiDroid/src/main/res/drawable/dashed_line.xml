<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--Create a layer list and add item of shape "Rectangle to it"-->
    <item
        android:left="-5dp"
        android:right="-5dp"
        android:top="-5dp"
        android:end="230dp">
        <shape
            android:shape="line">
            <!--Give the dashed lines their property
                 like color, width, and dashGap-->
            <stroke
                android:color="@color/popup_background_theme_dark"
                android:dashWidth="5dp"
                android:dashGap="5dp"
                android:width="5dp"
                />
        </shape>
    </item>
    <item
        android:left="-5dp"
        android:right="-5dp"
        android:top="-5dp"
        android:start="220dp">
        <shape
            android:shape="line">
            <!--Give the dashed lines their property
                 like color, width, and dashGap-->
            <stroke
                android:color="@color/popup_background_theme_dark"
                android:dashWidth="5dp"
                android:dashGap="5dp"
                android:width="5dp"
                />
        </shape>
    </item>
</layer-list>