<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- White Theme -->
    <style name="White">
        <item name="android:background">@color/white_background</item>
    </style>

    <style name="White.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/white_btn_default</item>
        <item name="android:textColor">@color/white_buttontext</item>
    </style>

    <style name="White.Button.Small" parent="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/white_btn_small</item>
    </style>

    <style name="White.Button.Toggle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/white_btn_toggle_bg</item>
    </style>

    <style name="White.AlertDialog">
        <item name="android:fullDark">@drawable/white_popup_full_bright</item>
        <item name="android:topDark">@drawable/white_popup_top_bright</item>
        <item name="android:centerDark">@drawable/white_popup_center_bright</item>
        <item name="android:bottomDark">@drawable/white_popup_bottom_bright</item>
        <item name="android:fullBright">@drawable/white_popup_full_bright</item>
        <item name="android:topBright">@drawable/white_popup_top_bright</item>
        <item name="android:centerBright">@drawable/white_popup_center_bright</item>
        <item name="android:bottomBright">@drawable/white_popup_bottom_bright</item>
        <item name="android:bottomMedium">@drawable/white_popup_bottom_medium</item>
        <item name="android:centerMedium">@drawable/white_popup_center_medium</item>
        <item name="android:buttonStyle">@style/White.Button</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="Theme.CrashReportDialog" parent="@android:style/Theme.Dialog" />

    <style name="White.Widget.ListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/white_list_selector_background</item>
    </style>

    <!-- Widget Elements -->
    <style name="Widget.ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.ProgressBar.BigWidget.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_widgetbig_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Animation.Translucent" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/translucent_exit</item>
    </style>

    <!-- Nav drawer style to set width specified by Material Design specification -->
    <style name="NavDrawer">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_offset</item>
        <item name="android:maxWidth">280dp</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Material Design button -->
    <style name="MaterialButton">
        <item name="android:background">@drawable/material_button</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--  Spinner -->
    <style name="White.Dropdown" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">?attr/selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">-56dp</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@drawable/color_selector</item>
    </style>

</resources>