<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://arbitrary.app.namespace/com.ichi2.anki"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:title="@string/accessibility"
    android:key="@string/pref_accessibility_screen_key">
<!--TODO: Add a Unit Test which verify that any preference added to the accessibility screen is also added to the reset list-->
    <Preference
        android:key="@string/reset_accessibility_buttons_key"
        android:title="@string/reset_custom_buttons" />
    <com.ichi2.preferences.SeekBarPreferenceCompat
        android:defaultValue="100"
        android:key="@string/card_zoom_preference"
        android:max="300"
        android:text=" %"
        android:title="@string/card_zoom"
        app:interval="10"
        app:min="10"
        app1:summaryFormat="@string/pref_summary_percentage"/>
    <com.ichi2.preferences.SeekBarPreferenceCompat
        android:defaultValue="100"
        android:key="@string/image_zoom_preference"
        android:max="300"
        android:text=" %"
        android:title="@string/image_zoom"
        app:interval="10"
        app:min="50"
        app1:summaryFormat="@string/pref_summary_percentage"/>
    <com.ichi2.preferences.SeekBarPreferenceCompat
        android:defaultValue="100"
        android:key="@string/answer_button_size_preference"
        android:max="200"
        android:text=" %"
        android:title="@string/button_size"
        app:interval="10"
        app:min="10"
        app1:summaryFormat="@string/pref_summary_percentage"/>
    <SwitchPreference
        android:key="@string/show_large_answer_buttons_preference"
        android:defaultValue="false"
        android:summary="@string/show_large_answer_buttons_summ"
        android:title="@string/show_large_answer_buttons"/>
    <com.ichi2.preferences.SeekBarPreferenceCompat
        android:defaultValue="100"
        android:key="@string/pref_card_browser_font_scale_key"
        android:max="200"
        android:text=" %"
        android:title="@string/card_browser_font_size"
        app:interval="10"
        app:min="10"
        app1:summaryFormat="@string/pref_summary_percentage"/>
</PreferenceScreen>