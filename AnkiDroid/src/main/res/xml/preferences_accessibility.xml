<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/accessibility"
    android:key="@string/pref_accessibility_screen_key">
    <com.ichi2.preferences.SliderPreference
        android:key="@string/card_zoom_preference"
        android:title="@string/card_zoom"
        android:defaultValue="100"
        android:valueFrom="10"
        android:valueTo="300"
        android:stepSize="10"
        app:displayFormat="@string/percentage"/>
    <com.ichi2.preferences.SliderPreference
        android:key="@string/image_zoom_preference"
        android:title="@string/image_zoom"
        android:defaultValue="100"
        android:valueFrom="50"
        android:valueTo="300"
        android:stepSize="10"
        app:displayFormat="@string/percentage"/>
    <com.ichi2.preferences.SliderPreference
        android:title="@string/button_size"
        android:key="@string/answer_button_size_preference"
        app:defaultValue="100"
        android:valueFrom="10"
        android:valueTo="200"
        android:stepSize="10"
        app:displayFormat="@string/percentage"/>
    <SwitchPreferenceCompat
        android:key="@string/show_large_answer_buttons_preference"
        android:defaultValue="false"
        android:summary="@string/show_large_answer_buttons_summ"
        android:title="@string/show_large_answer_buttons"/>
    <com.ichi2.preferences.SliderPreference
        android:key="@string/pref_card_browser_font_scale_key"
        android:title="@string/card_browser_font_size"
        app:defaultValue="100"
        android:valueFrom="10"
        android:valueTo="200"
        android:stepSize="10"
        app:displayFormat="@string/percentage"/>
    <com.ichi2.preferences.SliderPreference
        android:defaultValue="0"
        android:key="@string/pref_card_minimal_click_time"
        android:summary="@string/pref_show_answer_long_press_time_summary"
        android:title="@string/pref_show_answer_long_press_time"
        android:valueFrom="0"
        android:valueTo="2000"
        app:displayFormat="@string/pref_milliseconds"/>
</PreferenceScreen>